<%= form_for @request, class: "form-control input-lg", :url => url_for(:controller => 'requests') do |f| %>

    <%= f.text_field :title, class: "form-control", placeholder: "Song, Joke, Suggestion, Hack, Fact, Fact-Check, Etc"%>

    <br />

    <div class="row">

        <div class="col-lg-6">
    		<%= f.text_field :requester, class: "form-control", placeholder: "Name" %>
    	</div>

    	<div class="col-lg-6">
    		<%= f.text_field :email, class: "form-control", placeholder: "Your Email" %>
    	</div>
    </div>

     <p><div class="form-actions">
  <button type="submit" class="btn btn-default" style="width: 100%">Enter</button>
  </div></p>
<%end%>