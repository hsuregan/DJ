<script>
$(document).ready(function() {
  var replacementContent = function() {
    $.ajax( {
     type : 'GET',
     url : '#item_path',
     dataType : 'html',
     success : function(data) {
         $('#refreshable').html(data);
     },

  error: function(XMLHttpRequest, testStatus, errorThrown) {
     alert('Error!');
   }

   });

}
setInterval( function() {
  $("#refreshable").load(location.href+" #refreshable>*", "");
}, 10000);
});
</script>


<div id = "refreshable">

<!-- Regan's Radio Show -->

<% if @item_array_size != 0 %>
<img src=<%= @item_album_artwork.first.artwork_url100 %> style="position: absolute">
<% end %>

<table style = "margin-left: 100px; height: 105px">
<tr><td><b>Currently Playing</b>
</td></tr>
<tr><td>"<%= @item.name %>"</td></tr>
<tr><td>Artist: <%=@item.artist %></td></tr>

<% if @item.album != "" %>
<tr><td>Album: <%=@item.album %></tr>
<%end %>
</table>


<!-- Ucla's Radio -->

<% if @item_array_size_ucla != 0 %>
<img src=<%= @item_album_artwork_ucla.first.artwork_url100 %> style="position: absolute">
<% end %>

<table style = "margin-left: 100px; height: 105px">
<tr><td><b>Currently Playing On UCLARadio</b>
</td></tr>
<tr><td>"<%= @item_ucla.name %>"</td></tr>
<tr><td>Artist: <%=@item_ucla.artist %></td></tr>

<% if @item_ucla.album != "" %>
<tr><td>Album: <%=@item_ucla.album %></tr>
<%end %>
</table>


<h1>Recent Tracks</h1>
<table>
<% @recent_tracks.each do |t|%>
<tr><td> <%= t.created_at.strftime('%l:%M %p %b, %d: ') %>
  "<%=t.title%>" by <b><%=t.artist %></b> </td></tr>
<% end %>
</table>


</div>



