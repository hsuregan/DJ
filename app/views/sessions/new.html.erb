font-family: 'Source Code Pro';
}
</style>



 <h1>Login</h1>
  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email, params[:email]%> 
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= text_field_tag :password, params[:password], :type => "password" %> 
    </div>
    <div class="actions"><%= submit_tag "Log In" %></div>
  <% end %>